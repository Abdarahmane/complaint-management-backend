generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id         Int         @id @default(autoincrement())
  phone      String      @unique @db.VarChar(20)
  email      String      @unique @db.VarChar(100)
  name       String      @db.VarChar(50)
  address    String      @db.VarChar(100)
  complaints Complaint[] // One-to-many relation with Complaint
}

model Priority {
  id         Int         @id @default(autoincrement())
  name       String      @unique @db.VarChar(50)
  complaints Complaint[] // One-to-many relation with Complaint
}

model Category {
  id         Int         @id @default(autoincrement())
  name       String      @unique @db.VarChar(50)
  complaints Complaint[] // One-to-many relation with Complaint
}

model User {
  id                 Int         @id @default(autoincrement())
  email              String      @unique @db.VarChar(100)
  password           String      @db.VarChar(255)
  role               String      @db.VarChar(100)
  complaintsAssigned Complaint[] @relation("UserComplaintRelation") // One-to-many relation with Complaint (as assigned handler)
}

model Complaint {
  id               Int       @id @default(autoincrement())
  description      String    @db.VarChar(255)
  soumission_date  DateTime
  statut           String    @db.VarChar(100)
  resolved_date    DateTime?
  userId           Int?      // Foreign key for the responsible user

  // Foreign keys and relations
  client           Client    @relation(fields: [clientId], references: [id])
  clientId         Int

  priority         Priority  @relation(fields: [priorityId], references: [id])
  priorityId       Int

  category         Category  @relation(fields: [categoryId], references: [id])
  categoryId       Int

  responsable      User?     @relation("UserComplaintRelation", fields: [userId], references: [id])

  // Indexes for efficient queries
  @@index([clientId])
  @@index([priorityId])
  @@index([categoryId])
  @@index([userId])
}
